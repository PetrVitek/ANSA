ifconfig:

# ethernet card 0 of router - connected to R1
name: eth0
  inet_addr: 192.168.2.4
  Mask: 255.255.255.0
  Groups: 224.0.0.5:224.0.0.6
  MTU: 1500
  Metric: 2
  BROADCAST MULTICAST

# ethernet card 1 of router - connected to R3
name: eth1
  inet_addr: 192.168.3.4
  Mask: 255.255.255.0
  Groups: 224.0.0.5:224.0.0.6
  MTU: 1500
  Metric: 3
  BROADCAST MULTICAST
  
# ethernet card 2 of router - connected to host H2
name: eth2
  inet_addr: 192.168.2.1
  Mask: 255.255.255.0
  Groups: 224.0.0.5:224.0.0.6
  MTU: 1500
  Metric: 1
  BROADCAST MULTICAST

ifconfigend.

route:

224.0.0.0 * 240.0.0.0   H 0 eth0
224.0.0.0 * 240.0.0.0   H 0 eth1
224.0.0.0 * 240.0.0.0   H 0 eth2

routeend.
