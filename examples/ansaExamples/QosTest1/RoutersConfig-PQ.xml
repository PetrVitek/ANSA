<?xml version="1.0"?>
<Routers>

  <Router id="192.168.3.1"> <!-- R1 -->
    <Interfaces>
     <Interface name="ppp0">
        <IPAddress>192.168.3.1</IPAddress>
        <Mask>255.255.255.0</Mask>
        <OutputQueue type="PQ">
          <PriorityQueueList>10</PriorityQueueList>
        </OutputQueue>
      </Interface>
      <Interface name="eth0">
        <IPAddress>172.16.100.1</IPAddress>
        <Mask>255.255.255.0</Mask>
      </Interface>
    </Interfaces>
    <PriorityQueueLists>
      <PriorityQueueList id="10">
        <DefaultQueue>Low</DefaultQueue>
        <HighQueue>
          <Classifier type="DSCP">
            <value>ef</value>
          </Classifier>
        </HighQueue>
        <MediumQueue>
          <Lenght>30</Lenght>
          <Classifier type="PREC">
            <value>2</value>
          </Classifier>
        </MediumQueue>
        <LowQueue>
          <Lenght>60</Lenght>
        </LowQueue>
      </PriorityQueueList>
    </PriorityQueueLists>
    <Routing>  
      <Static>
        <Route>
          <NetworkAddress>172.16.200.0</NetworkAddress>
          <NetworkMask>255.255.255.0</NetworkMask>
          <ExitInterface>ppp0</ExitInterface>
        </Route>
      </Static>
    </Routing>
  </Router>
  
  <Router id="192.168.3.2"> <!-- R2 -->
    <Interfaces>
     <Interface name="ppp0">
        <IPAddress>192.168.3.2</IPAddress>
        <Mask>255.255.255.0</Mask>
        <OutputQueue type="WFQ">
          <HoldQueueLength>1000</HoldQueueLength>
          <CDT>64</CDT>
          <DynamicQueues>256</DynamicQueues>
        </OutputQueue>
      </Interface>
      <Interface name="eth0">
        <IPAddress>172.16.200.1</IPAddress>
        <Mask>255.255.255.0</Mask>
      </Interface>
    </Interfaces>
    <Routing>
      
      <Static>
        <Route>
          <NetworkAddress>172.16.100.0</NetworkAddress>
          <NetworkMask>255.255.255.0</NetworkMask>
          <NextHopAddress>192.168.3.1</NextHopAddress>
        </Route>
      </Static>
    </Routing>
  </Router>

</Routers>